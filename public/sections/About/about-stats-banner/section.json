    "html": "\n<section class=\"stats-banner-section\" data-ai-id=\"element-placeholder\">\n    <div class=\"container stats-container\">\n        <div class=\"stat-item anim-fade-in-up\">\n            <div class=\"stat-number\">500+</div>\n            <p>{{t:stat1_label}}</p>\n        </div>\n        <div class=\"stat-item anim-fade-in-up\" style=\"animation-delay: 0.2s\">\n            <div class=\"stat-number\">99%</div>\n            <p>{{t:stat2_label}}</p>\n        </div>\n        <div class=\"stat-item anim-fade-in-up\" style=\"animation-delay: 0.4s\">\n            <div class=\"stat-number\">10+</div>\n            <p>{{t:stat3_label}}</p>\n        </div>\n        <div class=\"stat-item anim-fade-in-up\" style=\"animation-delay: 0.6s\">\n            <div class=\"stat-number\">24/7</div>\n            <p>{{t:stat4_label}}</p>\n        </div>\n    </div>\n</section>",
