{
    "id": "trust-awards-badges",
    "html": "\n<section class=\"awards-badges-section\" data-ai-id=\"element-placeholder\">\n    <div class=\"container\">\n        <h2 class=\"section-title anim-fade-in-up\">{{t:title}}</h2>\n        <div class=\"badges-grid\">\n            <div class=\"badge-item anim-fade-in-up anim-delay-1\">\n                <img src=\"https://img.icons8.com/color/96/000000/quality.png\" alt=\"{{t:badge1_title}}\">\n                <h4>{{t:badge1_title}}</h4>\n            </div>\n            <div class=\"badge-item anim-fade-in-up anim-delay-2\">\n                <img src=\"https://img.icons8.com/color/96/000000/medal.png\" alt=\"{{t:badge2_title}}\">\n                <h4>{{t:badge2_title}}</h4>\n            </div>\n            <div class=\"badge-item anim-fade-in-up anim-delay-3\">\n                <img src=\"https://img.icons8.com/color/96/000000/trophy.png\" alt=\"{{t:badge3_title}}\">\n                <h4>{{t:badge3_title}}</h4>\n            </div>\n            <div class=\"badge-item anim-fade-in-up anim-delay-4\">\n                <img src=\"https://img.icons8.com/color/96/000000/guarantee.png\" alt=\"{{t:badge4_title}}\">\n                <h4>{{t:badge4_title}}</h4>\n            </div>\n        </div>\n    </div>\n</section>",
    "css": "\n.awards-badges-section { padding: 4rem 0; background-color: #f9fafb; position: relative; }\n.awards-badges-section .container { width: 90%; max-width: 1000px; margin: 0 auto; text-align: center; }\n.awards-badges-section .section-title { font-size: 2rem; margin-bottom: 3rem; color: var(--color-dark, #111827); }\n.awards-badges-section .badges-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(150px, 1fr)); gap: 2rem; }\n.awards-badges-section .badge-item img { width: 64px; height: 64px; margin: 0 auto 1rem; }\n.awards-badges-section .badge-item h4 { font-weight: 500; color: var(--color-secondary, #6B7280); }\n",
    "translations": {
        "de": { "title": "Anerkennung & Auszeichnungen", "badge1_title": "ISO 9001 Zertifiziert", "badge2_title": "Top Agentur 2023", "badge3_title": "Design Award Gewinner", "badge4_title": "Zufriedenheitsgarantie" },
        "en": { "title": "Recognition & Awards", "badge1_title": "ISO 9001 Certified", "badge2_title": "Top Agency 2023", "badge3_title": "Design Award Winner", "badge4_title": "Satisfaction Guaranteed" },
        "ar": { "title": "التقدير والجوائز", "badge1_title": "شهادة ISO 9001", "badge2_title": "أفضل وكالة 2023", "badge3_title": "الفائز بجائزة التصميم", "badge4_title": "ضمان الرضا" }
    }
}